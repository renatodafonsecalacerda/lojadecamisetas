<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr class="form-group">
        <td><%= departamento.nome %></td>
        <td><%= button_to 'Show', departamento,class:'btn btn-default' %>
        <%= button_to 'Edit', edit_departamento_path(departamento),class:'btn btn-primary' %>
        <%= button_to 'Destroy', departamento, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_departamento_path %>
