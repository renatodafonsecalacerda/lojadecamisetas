<% if flash[:notice] %>
<div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
</div>
<% end %>

<h3>Produtos</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>                        
            <th>Ações</th>
        </tr> 
    </thead>
    <tbody>    
        <%= render partial:"produto", collection: @produtos_por_nome %>
    </tbody>
</table>

<h3>Produtos mais Baratos</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>                      
        </tr> 
    </thead>
    <tbody>
        <%= render partial:"produto", collection: @produtos_por_preco %> 
    </tbody>
</table>

<%= link_to "Novo Produto", new_produto_path, class:"btn btn-primary btn-sm"  %>
<%= link_to "Novo Deparatmento", new_departamento_path, class:"btn btn-primary btn-sm"  %>
    